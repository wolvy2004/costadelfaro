---
import Menu from "./Menu.astro";
import Logo from "./Logo.astro";
import LogoH from "./Logo_h.astro";
const { links } = Astro.props;
---

<script>
  window.addEventListener("scroll", () => {
    const scroll: number = window.scrollY;
    const cabecera = document.getElementById("cabecera");
    if (cabecera) {
      if (scroll > 0) {
        cabecera.classList.add("scroll");
      } else {
        cabecera.classList.remove("scroll");
      }
    }
  });
</script>

<header id="cabecera">
  <div id="logo"><Logo /></div>
  <div id="logo_h"><img src="src/assets/logo_h.png" alt="" /></div>
  <Menu id="menu" links={links} />
</header>
<style>
  * {
    padding: 0;
    margin: 0;
    box-sizing: content-box;
  }
  #cabecera {
    width: 100%;
    position: fixed;
    display: flex;
    z-index: 99;
    height: 150px;
  }
  #logo {
    opacity: 1;
    z-index: 40;
    margin-left: 10em;
    scale: 1.9;
    padding: 1em;
    transition: 1s ease-in-out all;
    transition-delay: 1s;
  }
  #logo_h {
    padding: 0 1.5rem;
    opacity: 0;
    transform: translateY(-250px);
    transition: 1s ease-in-out all;
  }

  .scroll {
    height: 95px;
    .bg-white {
      height: 115px;
      box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.2);
    }
    #logo {
      opacity: 0;
      display: none;
    }
    #logo_h {
      display: block;
      opacity: 1;
      transform: translateY(0px);
      z-index: 99;
    }

    #menu {
      top: 0;
      margin: 0;
      width: 100%;
      opacity: 1;
      position: absolute;
      height: 125px;
      background-color: var(--var-color-white);
      box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.5);
    }
    #cabecera {
      padding: 0;
      margin: 0;
    }
  }
</style>
