---
import ReservasBox from "./ReservasBox.astro";
---

<main id="Home">
  <h1 class="title">Un Paraiso Frente al mar</h1>
  <p class="leyend">
    Lorem ipsum, dolor sit amet consectetur adipisicing elit. Repellendus alias
    dolor quos, quae dolores quidem omnis pariatur earum exercitationem neque
    voluptatem, magni deleniti. Unde placeat suscipit aut non cum ab.
  </p>
  <div class="bg_gradiente"></div>

  <!-- ventana modal-->
  <ReservasBox client:load />

  <div class="white_space"></div>
</main>
<style>
  main {
  }

  .title {
    font-family: var(--var-font-title);
    font-size: 4.5em;
    font-weight: 100;
    color: var(--var-color-white);
    position: absolute;
    bottom: 220px;
    text-align: center;
    width: 100%;
  }
  #Home {
    background-image: url("../assets/bg_home.jpg");
    width: 100%;
    height: 100vh;
    background-size: cover;
    background-position: 0px -150px;
    background-repeat: no-repeat;

    .leyend {
      position: absolute;
      bottom: 205px;
      width: 50%;
      text-align: center;
      left: 50%;
      transform: translateX(-50%);
      color: var(--var-color-white);
    }
  }
  .bg_gradiente {
    position: absolute;
    bottom: 0px;
    left: 0px;
    width: 100%;
    background: linear-gradient(
      0deg,
      var(--var-color-green400),
      1%,
      transparent
    );
    height: 90vh;
  }
  .white_space {
    position: absolute;
    width: 100%;
    height: 100px;
    background-color: var(--var-color-white);
    left: 0;
    bottom: 0;
  }
</style>
