---
import IconUser from "./icons/IconUser.astro";
const finicio_vig = "01-01-2025";
const ffinal_vig = "30-06-2025";
import { Icon } from "astro-icon/components";
---

<main id="Tarifas">
  <article class="container">
    <aside class="img-lat-izq">
      <div class="background-green"></div>
      <picture>
        <img src="imgs/img_aparts (22).JPG" alt="" />
      </picture>
    </aside>
    <section class="tarifas-detalle">
      <h1>Tarifas</h1>
      <p>Precios Vigentes desde {finicio_vig} hasta el {ffinal_vig}</p>
      <table>
        <tr
          ><td class="grid grid-cols-2 items-center justify-between p-1">
            <Icon class="" name="uil:user" />
            <Icon class="" name="uil:user" />
            <Icon class="" name="uil:user" />
            <Icon class="" name="uil:user" />
          </td><td class="detalle">Aparts 2 Personas</td>
          <td class="precio">$47000</td></tr
        >
        <tr
          ><td class="icon text-red-500"><IconUser /> </td><td class="detalle"
            >Aparts 2 Personas</td
          >
          <td class="precio">$47000</td></tr
        >
        <tr
          ><td class="icon"><IconUser /> </td><td class="detalle"
            >Aparts 2 Personas</td
          >
          <td class="precio">$47000</td></tr
        >
        <tr
          ><td class="icon"><IconUser /> </td><td class="detalle"
            >Aparts 2 Personas</td
          >
          <td class="precio">$47000</td></tr
        >
        <tr
          ><td class="icon"><IconUser /> </td><td class="detalle"
            >Aparts 2 Personas</td
          >
          <td class="precio">$47000</td></tr
        >
      </table>
      <span>Tarifa por noche de alojamiento, expresa en moneda local</span>
    </section>
  </article>
</main>
<style>
  main {
    width: 100%;
    height: 100vh;
    display: grid;
    justify-items: center;
    background-color: var(--var-color-green700);
  }
  .container {
    background-color: var(--var-color-white);
    margin-top: 5.5rem;
    border-top: 6px solid var(--var-color-green200);
    border-bottom: 6px solid var(--var-color-green200);
    width: 80%;
    height: 80%;
    display: flex;
  }
  .img-lat-izq {
    position: relative;
    img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
  }
  .tarifas-detalle {
    position: relative;
    width: 80%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    h1 {
      position: absolute;
      top: -140px;
      background-color: var(--var-color-white);
      padding: 0.1em 1em;
      color: var(--var-color-green100);
      font-family: var(--var-font-title);
      font-size: 3em;
    }
    p,
    span {
      color: var(--var-color-grey200);
    }
    margin-top: 4em;
    span {
      margin-top: 4em;
      font-size: 0.8rem;
    }

    table {
      width: 90%;
      border-collapse: collapse;
    }
  }
  tr {
    height: 50px;
    transition: 0.5s ease-in-out all;
  }

  tr:nth-child(odd) {
    background-color: var(--var-color-green800);
    transition: 0.5s ease-in-out all;
  }
  tr:nth-child(odd):hover td {
    background-color: var(--var-color-green500);
  }
  tr:hover td {
    background-color: var(--var-color-green700);
  }
  .icon {
    width: 20px;
    padding: 0.5em;
    fill: var(--var-color-green100);
  }
  .detalle {
    padding-left: 2em;
    color: var(--var-color-grey300);
  }
  .precio {
    color: var(--var-color-green200);
    font-weight: 600;
    text-align: center;
  }
  .background-green {
    z-index: 10;
    opacity: 0.5;
    position: absolute;
    width: 100%;
    height: 100%;
  }
</style>
