---
import { Icon } from "astro-icon/components";
---

<section id="Aparts">
  <article class="container">
    <h1 class="title-page">Nuestros aparts</h1>
    <div class="card">
      <picture>
        <img src="imgs/img_aparts (22).JPG" alt="apart 2 personas" />
      </picture>
      <div class="descripcion">
        <h1 class="title">
          Apart para 2 personas Monoambiente - Vista interna
        </h1>
        <p>detalle del apart con una breve descripcion del mismo</p>
        <button class="ver-mas"
          ><Icon name="mdi:plus" /> <span>ver mas</span>
        </button>
      </div>
    </div>
    <div class="card">
      <picture>
        <img src="imgs/img_aparts (40).JPG" alt="apart 2 personas" />
      </picture>
      <div class="descripcion">
        <h1 class="title">Aparts para 3 personas</h1>
        <p>detalle del apart con una breve descripcion del mismo</p>
        <button class="ver-mas"
          ><Icon name="mdi:plus" /> <span>ver mas</span>
        </button>
      </div>
    </div>
    <div class="card">
      <picture>
        <img src="imgs/img_aparts (36).JPG" alt="apart 2 personas" />
      </picture>
      <div class="descripcion">
        <h1 class="title">Aparts para 4 personas</h1>
        <p>detalle del apart con una breve descripcion del mismo</p>
        <button class="ver-mas"
          ><Icon name="mdi:plus" /> <span>ver mas</span>
        </button>
      </div>
    </div>
    <div class="card">
      |
      <picture>
        <img src="imgs/img_aparts (55).JPG" alt="apart 2 personas" />
      </picture>
      <div class="descripcion">
        <h1 class="title">Aparts para 5 personas</h1>
        <p>detalle del apart con una breve descripcion del mismo</p>
        <button class="ver-mas"
          ><Icon name="mdi:plus" /> <span>ver mas</span>
        </button>
      </div>
    </div>
  </article>
</section>
<style>
  .title-page {
    font-family: var(--var-font-title);
    text-align: center;
    position: relative;
    font-size: 6rem;
    color: var(--var-color-green400);
    margin-bottom: 2rem;
    &::before {
      content: "";
      top: 50%;
      left: 0;
      position: absolute;
      height: 3px;
      width: 35%;
      background-color: var(--var-color-grey100);
    }
    &::after {
      content: "";
      top: 50%;
      right: 0;
      position: absolute;
      height: 3px;
      width: 35%;
      background-color: var(--var-color-grey100);
    }
  }
  #Aparts {
    width: 1400px;
    background-color: var(--var-color-white);
    margin: 0 auto;
    padding: 40px;
    height: calc(400px * 4 + 160px);
  }
  .container {
  }
  .card {
    height: 400px;
  }
  .card:nth-child(2) {
    background-color: var(--var-color-green000);
    flex-direction: row-reverse;
  }
  .card:nth-child(4) {
    background-color: var(--var-color-green100);
    flex-direction: row-reverse;
  }
  .card:nth-child(1) {
    flex-direction: row-reverse;
  }
  .card {
    position: relative;
    display: flex;
    flex-direction: row;
    .descripcion {
      width: 50%;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }

    .title {
      text-align: center;
      font-size: 2em;
      font-family: var(--var-font-type);
      color: var(--var-color-green400);
    }
    p {
      color: var(--var-color-grey300);
      font-size: 0.9rem;
      height: 70px;
      margin: 1em 1em 2em 1em;
      line-height: 1.5rem;
    }
    picture {
      overflow: hidden;
      width: 50%;
      height: 100%;
    }
    img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: 0.5s ease-in-out;
    }
    img:hover {
      scale: 1.1;
    }

    button {
      display: flex;
      border-radius: 5px;
      justify-content: space-around;
      align-items: center;
      background: var(--var-color-green100);
      border: none;
      padding: 0.5rem;
      height: 35px;
      width: 100px;
      text-transform: uppercase;
      transition: 0.3s ease-in-out;
      text-align: center;
    }
    button:hover {
      background-color: var(--var-color-green400);
      color: var(--var-color-white);
    }
  }
</style>
